<h1>Edit <%= @song.name %></h1>
<form action='/songs/<%= @song.slug %>' method='POST'>
<input type="hidden" name="_method" value="patch">
  <p>
    <h2><label for="artist_name">Artist Name</label></h2>
    <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">
    <h2><label>Genres</label></h2>
    <% Genre.all.each do |genre| %>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(Genre.find(genre.id)) %>> <%= genre.name %><br>
    <% end %>
    <input type="submit" value="Save" id="Save">
</form>
