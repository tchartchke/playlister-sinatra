<% if flash.has?(:notice) %>
  <%= flash[:notice] %>
<% end %>

<h1><%= @song.name %></h1>

<p>
  Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
  <br><br>
  Genres
  <ul>
    <% @song.genres.each do |genre| %>
      <li>
        <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
      </li>
    <% end %>
  </ul>
</p>